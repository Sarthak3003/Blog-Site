    <h1> Compose </h1>
    <form method="post" action="/compose">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="postTitle" required>
            <label>Post</label>
            <textarea class="form-control" name="postBody" cols="30" rows="5" required></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary">Publish</button>
    </form>

